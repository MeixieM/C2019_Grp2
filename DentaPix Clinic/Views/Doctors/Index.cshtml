@model IEnumerable<Doctor>

@{
	ViewData["Title"] = "List of Doctors";
}

@*Write Code*@

<h1>Welcome to Doctors View</h1>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Manage Doctors</h2>
		</div>
	<div class="col-6 text-end">
		<a asp-controller="Doctors" asp-action="Create" class="btn btn-outline-primary">
			<i class="bi bi-plus-circle"></i>&nbsp; Add New Doctor
		</a>
	</div>
</div>
</br> </br>
<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table table-bordered table-striped " style="width: 100%">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
					<th>@Html.DisplayNameFor(model => model.FullName)</th>
					<th>@Html.DisplayNameFor(model => model.Career)</th>
					<th>@Html.DisplayNameFor(model => model.Interest)</th>
					<th>Actions</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@obj.ProfilePictureURL" alt="@obj.FullName" style="width: 150px">
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => obj.FullName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => obj.Career)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => obj.Interest)
						</td>
						<td class="align-middle" >
							<div class="w-75" role="group">
								<a asp-controller"="Doctors" asp-action="Edit" asp-route-id="@obj.DoctorId" class="btn btn-outline-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a> |
								<a asp-controller"="Doctors" asp-action="Details" asp-route-id="@obj.DoctorId" class="btn btn-outline-info mx-2"><i class="bi bi-eye"></i>Details</a> |
								<a asp-controller"="Doctors" asp-action="Delete" asp-route-id="@obj.DoctorId" class="btn btn-outline-danger mx-2"><i class="bi bi-trash"></i>Delete</a> |
								@*<a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |*@
								@*<a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a> *@
							</div>
						</td>
					</tr>
				}
			</tbody>
			

		</table>
	</div>
</div>
</div>


