@using System.Globalization
@model DentaPix_Clinic.Models.ViewModels.ShoppingCartVM
@using Microsoft.Extensions.Options
@inject IOptions<DentaPix_Clinic.Utility.StripeSettings> Stripe

<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class=" row container">
					<div class="col-6">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						 Treatment Summary
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Cart</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Patient Details:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>First Name</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.FirstName" class="form-control" />
									<span asp-validation-for="OrderHeader.FirstName" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Last Name</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.LastName" class="form-control" />
									<span asp-validation-for="OrderHeader.LastName" class="text-danger"></span>
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">
									<label>Phone</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.PhoneNumber" class="form-control" />
									<span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Full Address</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.Address" class="form-control" />
									<span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
								</div>
							</div>
						 </div>
							
							
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Order Summary:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach(var details in Model.ListCart)
								{
								<li class="list-group-item d-flex justify-content-between">
									<div>
										<h6 class="my-0">@details.Treatment.Name</h6>
										<small class="text-muted">Quantity: @details.Count</small>
									</div>
									<span class="text-muted">@((details.Price * details.Count).ToString("c")) </span>
								</li>
								}
								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">TOTAL (PHP)</small>
									<strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("C", CultureInfo.CreateSpecificCulture("fil-PH"))</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">Date:
						@DateTime.Now.ToShortDateString()	
						</p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-outline-primary form-control">Place Order</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

