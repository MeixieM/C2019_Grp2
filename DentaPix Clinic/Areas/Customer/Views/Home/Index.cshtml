@model IEnumerable<Doctor>

@*Video  Landing Page*@


<div class="video-background">
	<div class="video-wrap">
		<div id="video">
			<video id="bgvid" autoplay loop muted playsinline>
				<source src="./assets/images/spb_video.mp4" type="video/mp4"/>
			</video>
		</div>
	</div>
</div>
					
<div class="caption text-center">
	
  <img src="~/assets/images/dp_logo_big.png" style="display: inline-block;">
	<h1> DENTAL CLINIC</h1>
    <a class="btn btn-link btn-outline-primary" asp-area="Customer"  asp-controller="OnlineAppointment" asp-action="Insert" style="text-decoration: none" >BOOK NOW</a>

</div>

@*Team*@
<section  class="bg-light text-dark p-5 text-center">
		<div  class="container">
	<div class="row pb-3">
		<h1 class="text-primary"><b>Meet the team</b></h1>		
		<h2>that put the shine in your smile</h2>
	@foreach(var doctor in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row pd-2">
				<div  class="col-12 p-1" style="border:1px solid #fff; border-radius: 5px">
					<div  class="card">
						<img src="@doctor.ProfilePictureURL" class="card-img-top rounded" />
						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h4 text-primary"><b>@doctor.FullName</b></p>
							<p class="card-title h5 ">@doctor.Career</p>
						</div>
						<div class="pl-1">
							@*<p class="card-title h5 ">@doctor.Interest</p>*@
						</div>
						</div>
						
					</div>

				</div>

			</div>	
		</div>
	}

	</div>
</div>
</section>


<section  class="bg-light text-dark p-5 text-center">
		<h1 class="text-primary"><b>Our Services</b></h1>		
	<div class="row row-cols-2 row-cols-md-3 g-4">
  <div class="col">
    <div class="card p-2 ">
      <img src="~/assets/images/Asset 5.png" class="rounded mx-auto d-block" style="width: 60px">
