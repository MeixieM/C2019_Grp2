
@{
	ViewData["Title"] = "Index";
}


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Manage Patients</h2>
		</div>
	<div class="col-6 text-end">
		<a asp-controller="Patient" asp-action="Upsert" class="btn btn-outline-primary">
			<i class="bi bi-plus-circle"></i> &nbsp; Add New Patient
		</a>
	</div>
</div>
<br/> <br/>
<div class="row">
	<div class="col-md-12 offset-md-0">

		<table class="table table-bordered table-striped " style="width: 100%">
			<thead>
				<tr>
					<th>Basic Info</th>
					<th>Phone Number</th>
					<th>Address</th>
					<th>Next Appointment</th>
					<th>Last Appointment</th>
					<th>Register Date</th>
					<th>Actions</th>

				</tr>
			</thead>
			
		</table>
	</div>
</div>
</div>


